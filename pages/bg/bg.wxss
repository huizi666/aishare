/* pages/bg/bg.wxss */
.bg-main{
  width: 100%;
  height: 1440rpx;
  background: #ccc;
  padding: 3px;
  overflow: hidden;
  
}
.bg-main text {
  display: block;
  padding: 1px 3px;
  
  height: 45rpx;
  width: 100%;
  position: fixed;
  font-size: 30rpx;
  }
  .title{
    width: 100%;
    text-align: center;
    position: fixed;
    top: 0;
  }
  .getList{
    border: none;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #ddd;
    position: fixed;
    bottom: 0;
  }
  .user{
    width: 700rpx;
    height: 700rpx;
    background: #fff;
    position: fixed;
    top:200rpx;
    left: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }
  .userName{
    width: 400rpx;
    border-bottom:1px solid red; 
  }
  .userPickTitle{
    display: block;
    width: 100%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    margin: 10rpx 0 0 0;
  }
  .userPickContianer{
    width: 100%;
    height: 278rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
  }
  .userPick{
    width: 100rpx;
    height: 70rpx;
    font-size: 28rpx;
    padding: 0;
    margin: 0 20rpx;
  }
  .userClose{
    margin:20rpx -605rpx 0 0;
  }
  .userButton{
    width: 150rpx;
    height: 150rpx;
    border: none;
    background: blueviolet;
    padding: 0;
    border-radius: 75rpx;
    text-align: center;
    line-height: 150rpx;
    margin-bottom: 10rpx;
  }